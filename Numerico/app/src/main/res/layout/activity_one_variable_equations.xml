<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.eafit.numerico.OneVariableEquations">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="30dp" >

        <Button
            android:id="@+id/false_position_btn"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_shape"
            android:layout_alignLeft="@+id/incremental_search_btn"
            android:layout_below="@+id/incremental_search_btn"
            android:layout_marginTop="10dp"
            android:text="False Position" />

        <Button
            android:id="@+id/bisection_btn"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_shape"
            android:layout_above="@+id/false_position_btn"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/incremental_search_btn"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="22dp"
            android:text="Bisection" />

        <Button
            android:id="@+id/newton_btn"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_shape"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/false_position_btn"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:text="Newton's Method" />

        <Button
            android:id="@+id/fixed_point_btn"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_shape"
            android:layout_above="@+id/newton_btn"
            android:layout_alignLeft="@+id/bisection_btn"
            android:text="Fixed Point" />

        <Button
            android:id="@+id/secant_btn"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_shape"
            android:layout_above="@+id/multiple_roots_btn"
            android:layout_alignStart="@+id/fixed_point_btn"
            android:text="Secant's Method" />

        <Button
            android:id="@+id/incremental_search_btn"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_shape"
            android:layout_alignLeft="@+id/newton_btn"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:text="Incremental Search" />

        <Button
            android:id="@+id/multiple_roots_btn"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_shape"
            android:layout_below="@+id/newton_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Multiple Roots" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
